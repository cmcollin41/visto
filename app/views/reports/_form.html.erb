<%= form_with(model: report, local: true) do |form| %>
  <% if report.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(report.errors.count, "error") %> prohibited this report from being saved:</h2>

      <ul>
      <% report.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :address_id %>
    <%= form.text_field :address_id, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :customer_id %>
    <%= form.text_field :customer_id, class: "form-control" %>
  </div>

  <% @questions.each do |question| %>
    <p class="mt-5"><%= question.question %></p>
    <%= form.fields_for :responses, Response.new do |response| %>
    <%= response.hidden_field :question_id, value: question.id %>
    <div class="row">
      <% question.choices.each do |choice| %>
        <div class="col-md-3">
          <%= response.label choice.choice %>
          <%= response.radio_button :choice_id, choice.id %>
        </div>
      <% end %>
    </div>
    <% end %>
  <% end %>

  <%= form.hidden_field :admin_id, value: current_admin.id %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
