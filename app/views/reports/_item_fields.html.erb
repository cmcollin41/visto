<%= content_tag :div, class: "nested-fields", data: {new_record: form.object.new_record?} do %>
	<div class="form-group mt-4">
		<div class="form-group mt-4">
		  <%= form.label :kind %>
		  <%= form.select :kind, Item.kinds.keys.map { |o| [o.humanize, o] }, {prompt: true}, {class: "form-control", data: {action: "keyup->report#save"}} %>
		</div>
		<div class="row">
			<div class="col">
	  		<%= form.label :number %>
	  		<%= form.text_field :number, class: "form-control", data: {action: "keyup->report#save"} %>
	  	</div>
	  	<div class="col">
	  		<%= form.label :size %>
	  		<%= form.text_field :size, class: "form-control", data: {action: "keyup->report#save"} %>
	  	</div>
	  	<div class="col">
	  		<%= form.label :fuel_type %>
	  		<%= form.select :fuel_type, Item.fuel_types.keys.map { |o| [o.humanize, o] }, {prompt: true}, {class: "form-control", data: {action: "keyup->report#save"}} %>
	  	</div>
		</div>
	</div>
	<div class="form-group mt-4">
	  <%= form.label :notes %>
	  <%= form.text_area :notes, class: "form-control", rows: "3", data: {action: "keyup->report#save"} %>
	</div>
	<div class="form-group mt-4">
		<small><%= link_to "remove", "#", data: {action: "click->report#save click->nested-form#remove_association"} %></small>
	</div>

	<%= form.hidden_field :_destroy %>
<% end %>