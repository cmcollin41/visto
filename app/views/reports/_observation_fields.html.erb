<%= content_tag :div, class: "nested-fields" do %>
	<div class="form-group mt-4">
		<div class="row">
			<div class="col">
			  <%= form.label :name %>
			  <%= form.text_field :name, class: "form-control", placeholder: "Observation name", data: {action: "keyup->report#save"} %>
			</div>
			<div class="col">
				<%= form.label :defect %>
				<%= form.select :defect, Observation.defects.keys.map { |o| [o.humanize, o] }, {prompt: true}, {class: "form-control", data: {action: "change->report#save"}} %>
			</div>
		</div>
	</div>
	<div class="form-group mt-4">
		<%= form.label :description %>
		<%= form.text_area :description, class: "form-control", data: {action: "keyup->report#save"} %>
	</div>

  <div class="form-group mt-4">
    <%= form.file_field :images, multiple: true, data: {action: "change->report#save", target: "report.item"} %>
  </div>

	<div class="form-group mt-4">
		<small><%= link_to "remove", "#", data: {action: "click->report#save click->nested-form#remove_association"} %></small>
	</div>

	<%= form.hidden_field :_destroy %>
<% end %>