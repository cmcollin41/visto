<div class="col-md-10">
	<div class="d-flex justify-content-between align-items-center">
		<h3><%= @questions.first.system.humanize %></h3>
		<h3><%= @score %>/<small><%= @t_score %></small></h3>
	</div>
	<% @questions.each do |q| %>
		<% r = @responses.find_by(question_id: q) %>
		<div class="card my-5">
			<div class="card-body">
				<div class="mt-3">
					<span class="badge badge-secondary"><%= q.component %></span>
					<p class="mt-3">The <%= q.component %> had a <%= r.observation.humanize.downcase %>.</p>
					<p><%= r.response %></p>
					<% if r.images.attached? %>
						<% r.images.each do |img| %>
							<%= image_tag(img, width: "20%") %>
						<% end %>
					<% end %>
				</div>
			</div>
		</div>

	<% end %>
</div>

<div class="row justify-content-between">
  <%= link_to "Back", "#", class: "btn btn-primary", data: {action: "click->report#back"} %>
  <%= link_to "Next", "#", class: "btn btn-primary", data: {action: "click->report#next"} %>
</div>
